<h2>Account Details</h2><br>

<ul>

  <li>
    <strong>UserID:</strong>
    <%= @user.id %>
  </li>

  <br>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

  <br>

  <li>
